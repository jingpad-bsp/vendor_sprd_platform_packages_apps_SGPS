            <TextView
                android:id="@+id/tv_status"
                style="@style/style_table_right"
                android:text="@string/empty" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/title_ttff" />

            <TextView
                android:id="@+id/tv_ttff"
                style="@style/style_table_right"
                android:text="@string/empty" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/title_date" />

            <TextView
                android:id="@+id/tv_date"
                style="@style/style_table_right"
                android:text="@string/empty" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/title_time" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/style_table_right"
                android:text="@string/empty" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/first_latitude_text" />

            <TextView
                android:id="@+id/first_latitude_text"
                style="@style/style_table_right" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/first_longtitude_text" />

            <TextView
                android:id="@+id/first_longtitude_text"
