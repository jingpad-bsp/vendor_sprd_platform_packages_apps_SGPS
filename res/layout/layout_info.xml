        </LinearLayout>

        <View
            android:layout_height="1dip"
            android:background="@color/gray" />

        <!-- SPRD:GNSS Log Switch -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Switch
                android:id="@+id/gnss_rtk_switch"
