                android:layout_height="wrap_content"
                android:text="@string/gps_glonass_galileo" />

            <RadioButton
                android:id="@+id/radio_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/custom" />
        </RadioGroup>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TableRow>
                <TextView
                    android:id="@+id/custom_mode_system_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dip"
                    android:layout_weight="1"
                    android:text="@string/custom_cmd"/>

                <Button
                    android:id="@+id/mode_custom_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit" />
            </TableRow>

        </TableLayout> >
    </TableLayout>

</ScrollView>
