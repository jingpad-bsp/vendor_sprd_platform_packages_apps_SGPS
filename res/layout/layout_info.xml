            <TextView
                android:id="@+id/tv_duration_time"
                style="@style/style_table_right"
                android:text="@string/empty" />
        </TableRow>


        <View
            android:layout_height="1dip"
            android:background="@color/gray" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/title_lat" />

            <TextView
                android:id="@+id/tv_latitude"
                style="@style/style_table_right"
                android:text="@string/empty" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/title_lon" />

            <TextView
                android:id="@+id/tv_longitude"
                style="@style/style_table_right"
                android:text="@string/empty" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/title_alt" />

            <TextView
                android:id="@+id/tv_altitude"
                style="@style/style_table_right"
                android:text="@string/empty" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/title_acc" />

            <TextView
                android:id="@+id/tv_accuracy"
                style="@style/style_table_right"
                android:text="@string/empty" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/title_bear" />

            <TextView
                android:id="@+id/tv_bearing"
                style="@style/style_table_right"
                android:text="@string/empty" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/title_speed" />

            <TextView
                android:id="@+id/tv_speed"
                style="@style/style_table_right"
                android:text="@string/empty" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <TableRow>

            <TextView
                style="@style/style_table_left"
                android:text="@string/title_average_cn0" />

            <TextView
                android:id="@+id/average_cn0"
                android:text="@string/average_cn0" />
        </TableRow>

        <View
            android:layout_height="1dip"
            android:background="@color/gray" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_table_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_gps_version" />

            <TextView
                android:id="@+id/tv_gps_version"
                style="@style/style_table_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:scrollbars="vertical"
                android:singleLine="false" />
        </LinearLayout>
        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_table_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_agnss_version" />

            <TextView
                android:id="@+id/tv_agnss_version"
                style="@style/style_table_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:scrollbars="vertical"
                android:singleLine="false" />
        </LinearLayout>

        <View
            android:layout_height="1dip"
            android:background="@color/light_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                style="@style/style_table_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_sgps_version" />

            <TextView
                android:id="@+id/tv_sgps_version"
                style="@style/style_table_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:scrollbars="vertical"
                android:singleLine="false" />
        </LinearLayout>

        <View
            android:layout_height="1dip"
            android:background="@color/gray" />

        <!-- add change button to radio          start -->

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_white"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/radio_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/hot" />

            <RadioButton
                android:id="@+id/radio_warm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/warm" />

            <RadioButton
                android:id="@+id/radio_cold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cold" />

            <RadioButton
                android:id="@+id/radio_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/full" />
        </RadioGroup>
        <!-- add change button to radio        end -->

        <!-- add new feature for gps download bin by ansel.li-->
        <!-- add  GPS-IMG-MODE radio button     start -->
        <View
            android:layout_height="1dip"
            android:background="@color/gray" />
        <TextView
            android:id="@+id/gps_img_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:text="@string/gps_img_mode"
            android:textSize="20dip" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_white"
            android:orientation="horizontal" >
            <RadioButton
                android:id="@+id/radio_gps_beidou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gps_beidou" />

            <RadioButton
                android:id="@+id/radio_gps_glonass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gps_glonass" />
        </RadioGroup>
        <!-- add  GPS-IMG-MODE radio button     end -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_start"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:text="Open SGPS" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_weight="1"
                android:text="Close SGPS" />
        </LinearLayout>

        <!-- SPRD:SGPS Switch -->
        <View
            android:layout_height="1dip"
            android:background="@color/gray" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Switch
                android:id="@+id/single_satellite_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dip"
                android:text="@string/single_satellite_text"
                android:textSize="20dip"
                tools:ignore="NewApi" />
        </LinearLayout>

        <!-- SPRD:SpreadOrBit Switch -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Switch
                android:id="@+id/spreadorbit_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dip"
                android:text="@string/spreadorbit_swtich_text"
                android:textOff="@string/switch_off"
                android:textOn="@string/switch_on"
                android:textSize="20dp"
                tools:ignore="NewApi" />
        </LinearLayout>

        <View
            android:layout_height="1dip"
            android:background="@color/gray" />

        <!-- SPRD:Real-EPH Switch -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Switch
                android:id="@+id/real_eph_switch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dip"
                android:text="@string/real_eph_switch_text"
                android:textOff="@string/switch_off"
                android:textOn="@string/switch_on"
                android:textSize="20dp"
                tools:ignore="NewApi" />
        </LinearLayout>

        <View
            android:layout_height="1dip"
            android:background="@color/gray" />

        <!-- SPRD:GNSS Log Switch -->

