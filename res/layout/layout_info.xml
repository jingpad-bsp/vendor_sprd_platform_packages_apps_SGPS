                android:textOff="@string/switch_off"
                android:textOn="@string/switch_on"
                android:textSize="20dp"
                tools:ignore="NewApi" />
        </LinearLayout>

        <View
            android:layout_height="1dip"
            android:background="@color/gray" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dip"
            android:text="@string/mode_system_config"
            android:textSize="20dip" />
        <RadioGroup
            android:id="@+id/ge_mode_system_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_white"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/radio_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GpsOnly" />

            <RadioButton
                android:id="@+id/radio_glonass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GlonassOnly" />

            <RadioButton
                android:id="@+id/radio_bsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/BDSOnly" />

            <RadioButton
                android:id="@+id/radio_glogps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GlonassGps" />

            <RadioButton
                android:id="@+id/radio_gpsbds"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GpsBDS" />
        </RadioGroup>
        <!-- SPRD:add for GE2 e -->
        <!-- SPRD:add for Marlin3 -->
        <RadioGroup
            android:id="@+id/marlin3_mode_system_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_white"
            android:orientation="vertical"
            android:visibility="gone">

            <RadioButton
                android:id="@+id/radio_gps_bd2_glonass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps_bd2_glonass" />

            <RadioButton
                android:id="@+id/radio_gps_bd2_galileo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps_bd2_galileo" />

            <RadioButton
                android:id="@+id/radio_gps_b1c_glonass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps_b1c_glonass" />

            <RadioButton
                android:id="@+id/radio_gps_b1c_galileo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gps_b1c_galileo" />

            <RadioButton
                android:id="@+id/radio_gps_glonass_galileo"
